<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- custom gradient resources, accessed in App.xaml.cs & HighlightSelectTextBoxStyle.xaml -->
    
    <Color x:Key="VibrantStart">#E004DD</Color>
    <Color x:Key="VibrantEnd">#F63D96</Color>

    <LinearGradientBrush x:Key="VibrantGradientBrush" StartPoint="0, 0.5" EndPoint="1, 0.5">
        <GradientStop Color="{DynamicResource VibrantStart}" Offset="0.0" />
        <GradientStop Color="{DynamicResource VibrantEnd}" Offset="1.0" />
    </LinearGradientBrush>

</ResourceDictionary>